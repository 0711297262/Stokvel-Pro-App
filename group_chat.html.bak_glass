<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Group Chat — Stokvel PRO</title>

  <link rel="stylesheet" href="css/layout.css" />

  <script type="module" src="js/load-partials.js"></script>
  <script type="module" src="js/auth-guard.js"></script>
  <link rel="stylesheet" href="css/glass-ui.css">
</head>

<body class="motion-fade-scale">
  <div id="headerContainer"></div>
  <div id="header"></div>

  <main class="page motion-container">
    <h1 id="groupName">Chat</h1>

    <div id="messages" class="chat-box"></div>

    <div class="chat-input-row">
      <input id="msgInput" placeholder="Message…" />
      <glass-glass-glass-btn id="sendMsg" class="glass-glass-btn glass-glass-glass-btn">Send</glass-glass-glass-btn>
    </div>
  </main>

  <div id="footer"></div>

  <script type="module" src="js/group_chat.js"></script>
  <script type="module" src="js/motion-engine.js"></script>
  <script type="module" src="js/router-transitions.js"></script>
  <div id="footerContainer"></div>
  <div id="bottomNavContainer"></div>
  <script type="module" src="/js/load-partials.js"></script>
</body>
</html>
