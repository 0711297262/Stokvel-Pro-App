<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Component Gallery v4 — Stokvel PRO</title>

  <style>
    body {
      margin: 0;
      padding: 40px;
      font-family: system-ui, -apple-system, "Segoe UI", Roboto;
      background: #f4f7fb;
      color: #1e2a36;
    }

    h1 { font-size: 32px; font-weight: 800; margin-bottom: 6px; }
    h2 { margin-top: 32px; font-weight: 700; opacity: 0.85; }

    .section {
      margin-top: 24px;
      padding: 26px;
      background: white;
      border-radius: 18px;
      box-shadow: 0 4px 22px rgba(0,0,0,0.06);
    }

    /* BUTTONS */
    .glass-glass-btn {
      padding: 12px 18px;
      border-radius: 12px;
      border: none;
      cursor: pointer;
      transition: 0.2s;
      font-size: 15px;
      font-weight: 600;
    }

    .glass-glass-glass-btn {
      background: linear-gradient(90deg, #2b7bff, #5dabff);
      color: white;
    }
    .glass-glass-glass-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 18px rgba(0,0,0,0.15);
    }

    .glass-glass-btn-ghost {
      background:#f8fafc;
      border:1px solid #d7e0ea;
      color:#1e2a36;
    }

    /* INPUTS */
    .input-field {
      width:100%;
      padding:12px 14px;
      border-radius:10px;
      border:1px solid #d8e2ed;
      font-size:15px;
      margin-top:8px;
      outline:none;
      transition:0.2s;
    }
    .input-field:focus {
      border-color:#2b7bff;
      box-shadow:0 0 0 3px rgba(43,123,255,0.18);
    }

    /* SWITCH */
    .switch {
      position:relative;
      display:inline-block;
      width:48px;
      height:26px;
      margin-top:10px;
    }
    .switch input { display:none; }
    .slider {
      position:absolute;
      cursor:pointer;
      top:0;
      left:0;
      right:0;
      bottom:0;
      background:#c7d4e1;
      border-radius:34px;
      transition:.3s;
    }
    .slider:before {
      position:absolute;
      content:"";
      height:20px;
      width:20px;
      left:3px;
      bottom:3px;
      background:white;
      border-radius:50%;
      transition:.3s;
    }
    input:checked + .slider {
      background:#2b7bff;
    }
    input:checked + .slider:before {
      transform:translateX(22px);
    }

    /* STATUS PILLS */
    .pill {
      display:inline-block;
      padding:6px 12px;
      border-radius:999px;
      font-size:13px;
      font-weight:600;
      margin-right:8px;
    }
    .pill-active {
      background:#e6f4ff;
      color:#0b74e0;
    }
    .pill-pending {
      background:#fff7e6;
      color:#cc8b00;
    }
    .pill-danger {
      background:#ffe6e6;
      color:#d9363e;
    }
    .pill-success {
      background:#e8fbe9;
      color:#2f9e44;
    }

    /* ALERT BANNERS */
    .alert {
      padding:14px 18px;
      border-radius:12px;
      margin-bottom:16px;
      font-size:15px;
      font-weight:500;
    }
    .alert-success { background:#e9f9ed; color:#2e9f44; }
    .alert-warning { background:#fff9e6; color:#b88500; }
    .alert-danger  { background:#feecec; color:#d6393b; }

  </style>
  <link rel="stylesheet" href="css/glass-ui.css">
</head>

<body>
  <div id="headerContainer"></div>
<script src="/devtools/devtools_loader.js" defer></script>
<script src="/devtools/use_real_theme.js" defer></script>
<script src="/devtools/motion_presets.js"></script>

  <h1>Component Gallery v4</h1>
  <p>Stokvel PRO — 2025 Design System Upgrade</p>

  <hr style="margin: 26px 0; opacity: 0.3;" />

  <!-- BUTTONS -->
  <h2>Buttons</h2>
  <div class="section">
    <glass-glass-glass-btn class="glass-glass-btn glass-glass-glass-btn">Primary Button</glass-glass-glass-btn>
    <glass-glass-glass-btn class="glass-glass-btn glass-glass-btn-ghost" style="margin-left:10px;">Ghost Button</glass-glass-glass-btn>
  </div>

  <!-- INPUTS -->
  <h2>Input Fields</h2>
  <div class="section">
    <label>Phone Number</label>
    <input class="input-field" type="text" placeholder="+27 82 000 0000" />

    <label style="margin-top:14px;">Amount</label>
    <input class="input-field" type="number" placeholder="R 0.00" />
  </div>

  <!-- SWITCH -->
  <h2>Toggle / Switch</h2>
  <div class="section">
    <label class="switch">
      <input type="checkbox" checked />
      <span class="slider"></span>
    </label>
  </div>

  <!-- STATUS PILLS -->
  <h2>Status Pills</h2>
  <div class="section">
    <span class="pill pill-active">Active</span>
    <span class="pill pill-pending">Pending</span>
    <span class="pill pill-danger">Overdue</span>
    <span class="pill pill-success">Completed</span>
  </div>

  <!-- ALERTS -->
  <h2>Alert Banners</h2>
  <div class="section">
    <div class="alert alert-success">Payment complete</div>
    <div class="alert alert-warning">Incomplete form — missing fields</div>
    <div class="alert alert-danger">Payment failed</div>
  </div>

  <div id="footerContainer"></div>
  <div id="bottomNavContainer"></div>
  <script type="module" src="/js/load-partials.js"></script>
</body>
</html>
