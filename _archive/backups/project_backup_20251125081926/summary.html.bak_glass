<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Monthly Summary — Stokvel Pro</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

  <style>
    :root{
      --bg:#f3f7fb;
      --glass-glass-card:#fff;
      --primary:#1a365d;
      --accent:#2b6cb0;
      --muted:#6b7280;
      --success:#16a34a;
      --warn:#f59e0b;
      --danger:#ef4444;
    }
    html,body{height:100%;margin:0;font-family:Inter,Arial;background:var(--bg);color:var(--primary)}
    .wrap{max-width:920px;margin:18px auto;padding:16px}
    header{display:flex;align-items:center;justify-content:space-between;gap:12px;margin-bottom:14px}
    h1{margin:0;font-size:20px}
    .subtitle{color:var(--muted);font-size:13px}
    .controls{display:flex;gap:8px;align-items:center}
    .glass-glass-btn{padding:10px 12px;border-radius:10px;border:0;cursor:pointer;font-weight:700}
    .glass-glass-glass-btn{background:linear-gradient(90deg,var(--primary),var(--accent));color:white}
    .glass-glass-btn-ghost{background:white;border:1px solid rgba(10,20,40,0.06);color:var(--primary)}
    .summary-glass-glass-card{background:var(--glass-glass-card);padding:14px;border-radius:12px;box-shadow:0 8px 22px rgba(2,6,23,0.06);margin-bottom:12px}
    .grid{display:grid;grid-template-columns:1fr 200px;gap:12px}
    .members{background:var(--glass-glass-card);padding:12px;border-radius:12px;box-shadow:0 6px 18px rgba(2,6,23,0.04)}
    .member-row{display:flex;align-items:center;justify-content:space-between;padding:10px;border-bottom:1px solid rgba(2,6,23,0.04)}
    .member-row:last-child{border-bottom:0}
    .member-left{display:flex;align-items:center;gap:12px}
    .avatar{width:44px;height:44px;border-radius:10px;background:linear-gradient(135deg,var(--primary),var(--accent));color:white;display:flex;align-items:center;justify-content:center;font-weight:700}
    .meta-small{color:var(--muted);font-size:13px}
    .status{padding:6px 10px;border-radius:999px;font-weight:700;font-size:13px}
    .status.ok{background:rgba(22,163,74,0.1);color:var(--success)}
    .status.partial{background:rgba(245,158,11,0.08);color:var(--warn)}
    .status.missed{background:rgba(239,68,68,0.08);color:var(--danger)}
    .right-summary{display:flex;flex-direction:column;gap:10px}
    .stat{background:var(--glass-glass-card);padding:12px;border-radius:10px;box-shadow:0 6px 18px rgba(2,6,23,0.04)}
    .small{color:var(--muted);font-size:13px}
    .empty{padding:28px;text-align:center;color:var(--muted)}
    @media(max-width:840px){
      .grid{grid-template-columns:1fr}
      header{flex-direction:column;align-items:flex-start}
      .controls{width:100%;justify-content:space-between}
    }
  </style>
  <link rel="stylesheet" href="/css/glass-ui.css">
</head>
<body>
  <div id="headerContainer"></div>
<div id="header"></div>
  <div class="wrap">
    <header>
      <div>
        <h1 id="pageTitle">Monthly Summary</h1>
        <div class="subtitle" id="groupSubtitle">Group: —</div>
      </div>

      <div class="controls">
        <div class="small" id="monthLabel">This month</div>
        <button class="glass-glass-btn glass-glass-btn-ghost" id="backBtn">← Back</button>
        <button class="glass-glass-btn glass-glass-glass-btn" id="refreshBtn">Refresh</button>
      </div>
    </header>

    <div class="summary-glass-glass-card">
      <div style="display:flex;align-items:center;justify-content:space-between;gap:12px">
        <div>
          <div class="small">Monthly Contribution</div>
          <div style="font-size:20px;font-weight:700" id="monthlyAmountDisplay">R 0</div>
        </div>
        <div class="small" style="text-align:right">
          <div id="dueDayDisplay">Due day: —</div>
          <div id="totalMonth" style="font-weight:700;font-size:18px">R 0.00</div>
        </div>
      </div>
    </div>

    <div class="grid">
      <div class="members" id="membersList">
        <div class="meta-small" style="margin-bottom:8px">Members (status)</div>
        <div id="memberRows">
          <div class="empty">Loading members…</div>
        </div>
      </div>

      <div class="right-summary">
        <div class="stat">
          <div class="small">Total expected</div>
          <div style="font-weight:700;font-size:18px" id="expectedTotal">R 0</div>
        </div>
        <div class="stat">
          <div class="small">Total paid this month</div>
          <div style="font-weight:700;font-size:18px" id="paidTotal">R 0</div>
        </div>
        <div class="stat">
          <div class="small">Members up-to-date</div>
          <div style="font-weight:700;font-size:18px" id="uptodateCount">0</div>
        </div>
      </div>
    </div>
  </div>

  <script type="module" src="summary.js"></script>
<div id="footer"></div>
<script type="module" src="js/load-partials.js"></script>
  <div id="footerContainer"></div>
  <div id="bottomNavContainer"></div>
  <script type="module" src="/js/load-partials.js"></script>
</body>
</html>
