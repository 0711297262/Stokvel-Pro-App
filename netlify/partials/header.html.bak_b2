    <button class="glass-glass-btn glass-glass-btn-ghost" onclick="location.href='/groups.html'">My Groups</button>

    <!-- profile avatar button -->
    <button id="profileAvatarBtn" class="profile-glass-glass-btn">
      <img id="profileAvatar" src="https://api.dicebear.com/7.x/thumbs/png?seed=default" />
    </button>
  </nav>
</header>

