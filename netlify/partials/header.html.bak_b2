<meta name="theme-color" content="#ff6b00">

<style>
  /* PROFILE MENU (kept, integrated into new header) */
  .profile-glass-glass-btn img {
    width: 38px;
    height: 38px;
    border-radius: 50%;
    cursor: pointer;
  }

  .profile-menu {
    position: absolute;
    top: 72px;
    right: 18px;
    width: 240px;
    padding: 16px;
    border-radius: 18px;
    background: rgba(255,255,255,0.58);
    backdrop-filter: blur(18px) saturate(180%);
    -webkit-backdrop-filter: blur(18px) saturate(180%);
    box-shadow: 0 18px 36px rgba(0,0,0,0.15);
    z-index: 9999;
    opacity: 0;
    transform: translateY(-10px);
    pointer-events: none;
    transition: all .30s ease;
  }

  .profile-menu.visible {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .pm-header {
    display: flex;
    gap: 12px;
    align-items: center;
    padding-bottom: 12px;
    border-bottom: 1px solid rgba(255,255,255,0.4);
  }

  .pm-avatar {
    width: 46px;
    height: 46px;
    border-radius: 50%;
  }

  .pm-item {
    padding: 12px;
    border-radius: 10px;
    margin-top: 10px;
    background: rgba(255,255,255,0.25);
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 10px;
    transition: background .2s ease, transform .2s ease;
  }

  .pm-item:hover {
    background: rgba(255,255,255,0.45);
    transform: translateX(4px);
  }
</style>

<!-- NEW UI FRAMEWORK HEADER -->
<header class="glass-glass-card" style="display:flex;align-items:center;gap:12px;padding:12px 18px;margin-bottom:18px;position:sticky;top:0;z-index:1000;">
